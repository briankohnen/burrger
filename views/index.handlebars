<div class="headwrap">
<h1 class="headText">EAT-DA-BURGER</h1>
<img src="/img/tinyburger.png" class="image">
</div>

<div class="wrapper">

<div class="notAte">
<h2>Fresh burgers</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
    <li>
        <div class="burgy">
        <h3>{{this.id}}. {{this.burger_name}}</h3>
        <button data-id="{{this.id}}" class="devour">DEVOUR IT!</button>
    </li>
    {{/unless}}
  {{/each}}
</ul>
</div>

<div class="addaBurg">
<h2>Add your own burger</h2>
<form class="create-form">

  <div class="form-group">
    <input type="text" id="burg" name="name">
  </div>

  <button class="subBut" type="submit">Submit your recipe</button>
</form>
</div>

<div class="ate">
<h2>Eaten burgers</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
    <li>
        <div class="ateBurgy">
        <h3>{{this.burger_name}}</h3>
    </li>
    {{/if}}
  {{/each}}
</ul>
</div>

</div>
